{
  "compilerOptions": {
      "target": "esnext",
      "lib": ["DOM", "DOM.Iterable", "ESNext"],
      "types": ["vite/client", "node"],
      "module": "esnext",
      "esModuleInterop": true,
      "noUnusedLocals": false,
      "noUnusedParameters": false,
      "strict": true,
      "allowJs": true,
      "jsx": "react-native",
      "moduleResolution": "node",
      "noImplicitReturns": true,
      "resolveJsonModule": true,
      "outDir": "./dist",
      "skipLibCheck": true,
      "baseUrl": ".", 
      "paths": {
      "@/*": [  
          "src/*"
      ]
      }
  },
  "exclude": [
      "node_modules",
      "__tests__",
      "**/*.config.js"
  ]
}